{% extends 'layouts/base.html.jinja' %}

{% block title %}Alain Cao Van Truong | Contact{% endblock %}

{% block content %}
<section class="container">
  <div class="row">
    <form class="w-100">
      <div class="form-group">
        <label for="exampleFormControlInput1">Your name</label>
        <input type="text" class="form-control" id="exampleFormControlInput1">
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Your email address</label>
        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Your message</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
      </div>
      <button type="submit" class="btn btn-primary mb-2">Send message</button>
    </form>
</div>
</section>
{% endblock %}
